<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net45;net5.0;</TargetFrameworks>
		<Version>0.2.0</Version>
		<OutputPath>bin\$(Configuration)\</OutputPath>
		<DocumentationFile>$(OutputPath)$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageVersion>0.2.0</PackageVersion>
		<Authors>View</Authors>
		<Description>使用 GDI+ 对图像的操作的扩展库。目前主要是改变图像尺寸和改变图像的质量。</Description>
		<PackageTags>GDI+,bitmap,change image size</PackageTags>
		<PackageIcon>View.Logo.png</PackageIcon>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/View12138/View.Libraries/tree/master/View.Drawing.Extensions</RepositoryUrl>
		<PackageProjectUrl>https://github.com/View12138/View.Libraries/tree/master/View.Drawing.Extensions</PackageProjectUrl>
		<NeutralLanguage>zh</NeutralLanguage>
		<Copyright>Copyright 2021</Copyright>
	
</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\images\View.Logo.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
		<PackageReference Include="System.Drawing.Common" Version="5.0.2" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0' ">
		<PackageReference Include="System.Drawing.Common" Version="5.0.2" />
	</ItemGroup>

</Project>
